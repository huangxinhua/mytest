import org.apache.log4j.Logger;
import org.apache.log4j.PropertyConfigurator;

public class LoggerUtil {

    public static void initLoggerConfig() {

        String filePath = LoggerUtil.class.getClassLoader().getResource("").getFile().toString();
        String realAbsPath = filePath.substring(1, filePath.length());
        PropertyConfigurator.configure(realAbsPath.replace("%20", " ") + "log4j.properties");
    }

    public static Logger getLogger() {
        LoggerUtil.initLoggerConfig();
        return Logger.getLogger("console");
    }
}
